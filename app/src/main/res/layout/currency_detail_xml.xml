<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<TableLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
    >

    <TableRow>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currency: "
            android:paddingLeft="10dp"
            android:textSize="25dp"
            android:paddingTop="15dp"
            android:id="@+id/currencyNameTV"

            />

        <TextView
            android:id="@+id/currencyNameBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:paddingTop="15dp"
            android:paddingLeft="80dp"
            />
    </TableRow>

    <TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: "
        android:textSize="25dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:id="@+id/currencyPriceTV"

        />
    <TextView
        android:id="@+id/currencyPriceBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="180dp"
        android:paddingTop="15dp"
        android:textSize="25dp"
        />
    </TableRow>

    <TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Symbol: "
        android:textSize="25dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:id="@+id/currencySymbolTV"
        />
    <TextView
        android:id="@+id/currencySymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:paddingTop="15dp"
        />
    </TableRow>

    <TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Circulation Supply: "
        android:paddingLeft="10dp"
        android:textSize="24dp"
        android:paddingTop="15dp"
        android:id="@+id/currencyCirculationSupplyTV"
        />
    //currency supply is the current circulation supply
    <TextView
        android:id="@+id/currencySupply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:paddingTop="15dp"
        android:paddingLeft="16dp"
        />
    </TableRow>

    <TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rank: "
        android:paddingLeft="10dp"
        android:textSize="24dp"
        android:paddingTop="15dp"
        android:id="@+id/currencyRankTV"
        />
    <TextView
        android:id="@+id/currencyRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        />
    </TableRow>

    <TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC Price:"
        android:paddingLeft="10dp"
        android:textSize="24dp"
        android:id="@+id/currencyBTCPriceTV"
        android:paddingTop="15dp"
        />
        <TextView
        android:id="@+id/currencyPriceBTC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    </TableRow>
    <TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24H Volume: "
        android:paddingLeft="10dp"
        android:textSize="24dp"
        android:id="@+id/currency24HVolumeTV"
        android:paddingTop="15dp"
        />
    </TableRow>
    <TextView
    android:id="@+id/currency24Volume"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="24dp"
    />
    <TableRow>

    </TableRow>

    <TextView
        android:id="@+id/currencyTotalSupply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="30dp"
        />
    <TextView
        android:id="@+id/currencyMaxSupply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="30dp"
        />
</TableLayout>

</LinearLayout>
