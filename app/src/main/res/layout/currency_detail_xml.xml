<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableRow>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currency: "
            android:paddingLeft="10dp"
            android:textSize="20dp"
            android:paddingTop="4dp"
            android:id="@+id/currencyNameTV"

            />
        <TextView
            android:id="@+id/currencyNameBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            />
    </TableRow>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: "
        android:paddingLeft="7dp"
        android:textSize="20dp"
        android:id="@+id/currencyPriceTV"
        />
    <TextView
        android:id="@+id/currencyPriceBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="70dp"
        android:textSize="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Symbol: "
        android:paddingLeft="7dp"
        android:textSize="20dp"
        android:id="@+id/currencySymbolTV"
        />
    <TextView
        android:id="@+id/currencySymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Circulation Supply: "
        android:paddingLeft="7dp"
        android:textSize="20dp"
        android:id="@+id/currencyCirculationSupplyTV"
        />
    //currency supply is the current circulation supply
    <TextView
        android:id="@+id/currencySupply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:paddingLeft="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rank: "
        android:paddingLeft="7dp"
        android:textSize="20dp"
        android:id="@+id/currencyRankTV"
        />
    <TextView
        android:id="@+id/currencyRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC Price:"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:id="@+id/currencyBTCPriceTV"
        android:paddingTop="24dp"
        />
    <TextView
    android:id="@+id/currencyPriceBTC"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24H Volume: "
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:id="@+id/currency24HVolumeTV"
        android:paddingTop="24dp"
        />
    <TextView
    android:id="@+id/currency24Volume"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="30dp"
    />

    <TextView
        android:id="@+id/currencyTotalSupply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="30dp"
        />
    <TextView
        android:id="@+id/currencyMaxSupply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="30dp"
        />
</TableLayout>

</LinearLayout>
